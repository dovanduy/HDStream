<UserControl x:Class="HDStream.SpeechBubble"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="LayoutRoot" Background="Transparent" VerticalAlignment="Bottom">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Rectangle Stroke="Black" StrokeThickness="0" Fill="{StaticResource PhoneTextBoxBrush}"/>
        <TextBlock x:Name="txtbox" FontSize="21" TextWrapping="Wrap" Grid.Row="0" Foreground="Black" Margin="5,5,5,5"/>
        <Path x:Name="path" Fill="{StaticResource PhoneTextBoxBrush}" Stretch="Fill" Data="M65,81.5 L65,101.82753 L45,81.5 C45,81.5 65,81.5 65,81.5 z" UseLayoutRounding="False" HorizontalAlignment="Right" Width="26.083" StrokeThickness="0" Grid.Row="1"/>        
    </Grid>

</UserControl>
